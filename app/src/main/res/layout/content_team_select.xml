<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.ac.kookmin.oss.baseball.TeamSelectActivity"
    tools:showIn="@layout/activity_team_select">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/team_bears"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_bears" />

        <ImageView
            android:id="@+id/team_dinos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_dinos" />

        <ImageView
            android:id="@+id/team_eagles"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_eagles" />

        <ImageView
            android:id="@+id/team_giants"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_giants" />

        <ImageView
            android:id="@+id/team_heroes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_heroes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/team_lions"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_lions" />

        <ImageView
            android:id="@+id/team_tigers"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_tigers" />

        <ImageView
            android:id="@+id/team_twins"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_twins" />

        <ImageView
            android:id="@+id/team_wiz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_wiz" />

        <ImageView
            android:id="@+id/team_wyvurns"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:src="@drawable/team_wyvurns" />
    </LinearLayout>


</LinearLayout>
